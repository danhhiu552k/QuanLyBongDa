
@if (Session["TaiKhoan"] != null)
{
    <!DOCTYPE html>
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin: @Session["TaiKhoan"].ToString()</title>
        <!-- BOOTSTRAP STYLES-->
        <link href="~/Areas/Admin/assets/css/bootstrap.css" rel="stylesheet" />
        <!-- FONTAWESOME STYLES-->
        <link href="~/Areas/Admin/assets/css/font-awesome.css" rel="stylesheet" />
        <!-- MORRIS CHART STYLES-->
        
        <!-- CUSTOM STYLES-->
        <link href="~/Areas/Admin/assets/css/custom.css" rel="stylesheet" />

    </head>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="index.html">
                        @if (Session["TaiKhoan"] != null)
                        {
                            <h4>Welcome @Session["TaiKhoan"].ToString()</h4>
                        }
                        else
                        {
                            <h4>Blank</h4>
                        }
                    </a>
                </div>
                <div style="color: white; padding: 15px 50px 5px 50px;float: right;font-size: 16px;">
                    @if (Session["TaiKhoan"] != null)
                    {
                        <h5 style="float: left; margin-right: 3em;">@Session["TaiKhoan"].ToString() </h5>
                        @Html.ActionLink("Đăng Xuất", "Logout", "Home", new { @class = "btn btn-danger square-btn-adjust" })
                    }
                    else
                    {
                        @Html.ActionLink("Đăng Nhập", "Login", "Admin", new { @class = "btn btn-danger square-btn-adjust" })
                        @Html.ActionLink("Đăng kí", "Register", "Admin", new { @class = "btn btn-danger square-btn-adjust" })
                    }
                </div>
            </nav>
            <!-- /. NAV TOP  -->
            <nav class="navbar-default navbar-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav" id="main-menu">
                        <li class="text-center">
                            <img src="~/Areas/Admin/assets/img/find_user.png" class="user-image img-responsive" />
                        </li>


                        <li>
                            <a class="active-menu" href="@Url.Action("DanhSachGiaiDau", "Admin")"><i class="fa fa-dashboard fa-3x"></i> Danh Sách Giải Đấu</a>
                        </li>
                        <li>
                            <a href="ui.html"><i class="fa fa-desktop fa-3x"></i> UI Elements</a>
                        </li>
                        <li>
                            <a href="tab-panel.html"><i class="fa fa-qrcode fa-3x"></i> Tabs & Panels</a>
                        </li>
                        <li>
                            <a href="chart.html"><i class="fa fa-bar-chart-o fa-3x"></i> Morris Charts</a>
                        </li>
                        
                    </ul>

                </div>

            </nav>
            <!-- /. NAV SIDE  -->
            <div id="page-wrapper">
                @RenderBody()
                <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>
        <!-- /. WRAPPER  -->
        <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
        <!-- JQUERY SCRIPTS -->
        
    </body>
</html>
}
