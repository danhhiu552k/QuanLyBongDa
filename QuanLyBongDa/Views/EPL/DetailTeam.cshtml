        function getplayer(nameteam, player1) {
            var urlplayer = 'https://www.thesportsdb.com/api/v1/json/1/searchplayers.php?t=' + nameteam + '&p=' + player1 + '';
            $.getJSON(urlplayer, function (respone) {
